{% liquid
  assign media_count = 0
  assign media_1 = 'none'
  assign use_default_image = false

  if section.settings.image_1 != blank and section.settings.media_type_1 == 'image'
    assign media_1 = 'image'
    assign media_count = media_count | plus: 1
  endif
  if section.settings.video_1 != blank and section.settings.media_type_1 == 'video'
    assign media_1 = 'video'
    assign media_count = media_count | plus: 1
  endif

  comment
    如果没有上传图片，使用默认背景图
  endcomment
  if media_count == 0 and section.settings.media_type_1 == 'image'
    assign use_default_image = true
  endif

  assign sizes = '100vw'
  assign widths = '832, 1200, 1600, 1920, 2560, 3840'

  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
%}

{% capture media %}
  {%- if media_1 == 'image' -%}
    {{
      section.settings.image_1
      | image_url: width: 3840
      | image_tag:
        width: section.settings.image_1.width,
        widths: widths,
        height: section.settings.image_1.height,
        alt: section.settings.image_1.alt,
        class: 'page-banner__image',
        sizes: sizes,
        fetchpriority: fetch_priority
    }}
  {%- endif -%}

  {%- if media_1 == 'video' -%}
    <div class="page-banner__video-wrapper">
      {{
        section.settings.video_1
        | video_tag:
          poster: nil,
          autoplay: true,
          loop: true,
          controls: false,
          muted: true,
          class: 'page-banner__video'
      }}
    </div>
  {%- endif -%}

  {%- if use_default_image -%}
    {%- if section.settings.default_image_url != blank -%}
      <img
        src="{{ section.settings.default_image_url }}"
        alt="Page Banner"
        class="page-banner__image"
        loading="eager"
      >
    {%- else -%}
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'page-banner__image' }}
    {%- endif -%}
  {%- endif -%}
{% endcapture %}

<div
  id="PageBanner-{{ section.id }}"
  class="page-banner color-{{ section.settings.color_scheme }}"
  style="
    {% if section.settings.section_height == 'custom' %}
      --page-banner-min-height: {{ section.settings.section_height_custom }}svh;
    {% elsif section.settings.section_height == 'full-screen' %}
      --page-banner-min-height: 100svh;
    {% else %}
      --page-banner-min-height: var(--section-height-{{ section.settings.section_height }});
    {% endif %}
  "
>
  <div
    class="page-banner__container spacing-style section section--full-width"
    style="{% render 'spacing-style', settings: section.settings %}"
  >
    <div class="page-banner__media-wrapper">
      {% liquid
        if section.settings.toggle_overlay
          render 'overlay', settings: section.settings
        endif
      %}
      {{ media }}
    </div>
    <div
      class="
        page-banner__content-wrapper
        layout-panel-flex
        layout-panel-flex--{{ section.settings.content_direction }}
        section-content-wrapper
        {{ section.settings.section_width }}
      "
      style="{% render 'layout-panel-style', settings: section.settings %}"
    >
      {% content_for 'blocks' %}
    </div>
  </div>
</div>

{% stylesheet %}
  .page-banner {
    position: relative;
    min-height: var(--page-banner-min-height, var(--section-height-large));
  }

  .page-banner__container {
    position: relative;
    overflow: hidden;
    min-height: inherit;
    align-items: var(--vertical-alignment-mobile);
    justify-content: var(--horizontal-alignment);
    z-index: var(--layer-base);

    @media screen and (min-width: 750px) {
      align-items: var(--vertical-alignment);
    }
  }

  .page-banner__content-wrapper {
    position: relative;
    inset: 0;
    z-index: var(--layer-flat);
  }

  .page-banner__content-wrapper.page-width {
    grid-column: 2 / 3;
  }

  .page-banner__media-wrapper {
    position: absolute;
    inset: 0;
    display: grid;
    grid-column: 1 / -1;
  }

  .page-banner__image,
  .page-banner__video {
    height: 100%;
    width: 100%;
    object-fit: cover;
    object-position: center center;
    overflow: hidden;
    position: relative;
    z-index: var(--layer-base);
  }

  .page-banner__video-wrapper {
    position: relative;
    height: 100%;
    width: 100%;
  }

  .page-banner__media-wrapper,
  .page-banner__content-wrapper {
    pointer-events: none;

    :is(a, button, input, textarea, select) {
      pointer-events: auto;
    }
  }
{% endstylesheet %}

