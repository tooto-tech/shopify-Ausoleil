{%- comment -%}
  Product Showcase Swiper - Slide Block
  - 左侧：图片 + 居中图标/文本 + See More 链接
  - 右侧：可添加任意 blocks
{%- endcomment -%}

{%- assign block_settings = block.settings -%}
{%- assign block_index = section.blocks | find_index: 'id', block.id -%}

{% capture children %}
  <div class="pss-slide__container">
    <!-- 左侧图片 -->
    <div class="pss-slide__left">
      {%- if block_settings.left_image != blank -%}
        {%- liquid
          assign left_img = block_settings.left_image
          assign left_mobile_img = block_settings.left_image_mobile | default: left_img
          assign loading_type = 'lazy'
          if block_index == 0
            assign loading_type = 'eager'
          endif
        -%}
        <img
          src="{{ left_img | image_url: width: 1500 }}"
          srcset="{{ left_img | image_url: width: 750 }} 750w, {{ left_img | image_url: width: 1200 }} 1200w, {{ left_img | image_url: width: 1500 }} 1500w"
          sizes="(max-width: 749px) 100vw, 45vw"
          alt="{{ left_img.alt | escape }}"
          class="pss-slide__left-img pss-slide__left-img--desktop"
          loading="{{ loading_type }}"
          width="{{ left_img.width }}"
          height="{{ left_img.height }}"
        >
        {%- if block_settings.use_mobile_image and block_settings.left_image_mobile != blank -%}
          <img
            src="{{ left_mobile_img | image_url: width: 750 }}"
            alt="{{ left_mobile_img.alt | escape }}"
            class="pss-slide__left-img pss-slide__left-img--mobile"
            loading="{{ loading_type }}"
            width="{{ left_mobile_img.width }}"
            height="{{ left_mobile_img.height }}"
          >
        {%- endif -%}
      {%- else -%}
        <div class="pss-slide__placeholder">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {%- endif -%}

      {%- if block_settings.toggle_overlay -%}
        {% render 'overlay', settings: block_settings %}
      {%- endif -%}

      <!-- 左侧居中内容：图标 + 文本 -->
      {%- if block_settings.center_icon != blank or block_settings.center_text != blank -%}
        <div class="pss-slide__left-center">
          {%- if block_settings.center_icon != blank -%}
            <img
              src="{{ block_settings.center_icon | image_url: width: 400 }}"
              alt="{{ block_settings.center_icon.alt | default: '' | escape }}"
              class="pss-slide__left-icon"
              style="width: {{ block_settings.icon_width }}px; max-width: {{ block_settings.icon_width_mobile }}px;"
              width="{{ block_settings.center_icon.width }}"
              height="{{ block_settings.center_icon.height }}"
            >
          {%- endif -%}
          {%- if block_settings.center_text != blank -%}
            <p class="pss-slide__left-text" style="
              font-size: {{ block_settings.text_size }};
              font-weight: {{ block_settings.text_weight }};
              color: {{ block_settings.text_color }};
              letter-spacing: {{ block_settings.text_letter_spacing }};
              margin-top: {{ block_settings.text_margin_top }}px;
            ">{{ block_settings.center_text }}</p>
          {%- endif -%}
        </div>
      {%- endif -%}

      <!-- See More 链接在左侧底部 -->
      {%- if block_settings.see_more_text != blank -%}
        <a href="{{ block_settings.see_more_link }}" class="pss-slide__see-more">
          {{ block_settings.see_more_text }}
        </a>
      {%- endif -%}
    </div>

    <!-- 右侧内容 -->
    <div class="pss-slide__right" style="
      {%- if block_settings.right_bg_color != blank -%}background-color: {{ block_settings.right_bg_color }};{%- endif -%}
      padding: {{ block_settings.right_padding_top }}px {{ block_settings.right_padding_right }}px {{ block_settings.right_padding_bottom }}px {{ block_settings.right_padding_left }}px;
    ">
      <div class="pss-slide__right-content" style="
        align-items: {{ block_settings.horizontal_alignment }};
        justify-content: {{ block_settings.vertical_alignment }};
        gap: {{ block_settings.content_gap }}px;
      ">
        {% content_for 'blocks' %}
      </div>

      <!-- 进度条 -->
      <div class="pss-slide__progress">
        <div class="pss-slide__progress-track">
          <div class="pss-slide__progress-fill"></div>
        </div>
      </div>
    </div>
  </div>
{% endcapture %}

<div class="swiper-slide pss-slide" {{ block.shopify_attributes }}>
  {{ children }}
</div>

{% schema %}
{
  "name": "PSS 幻灯片",
  "tag": null,
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  "settings": [
    {
      "type": "header",
      "content": "左侧背景图片"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "图片"
    },
    {
      "type": "checkbox",
      "id": "use_mobile_image",
      "label": "使用移动端图片",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "left_image_mobile",
      "label": "移动端图片",
      "visible_if": "{{ block.settings.use_mobile_image }}"
    },
    {
      "type": "checkbox",
      "id": "toggle_overlay",
      "label": "图片遮罩",
      "default": false
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "遮罩颜色",
      "alpha": true,
      "default": "#00000040",
      "visible_if": "{{ block.settings.toggle_overlay }}"
    },
    {
      "type": "select",
      "id": "overlay_style",
      "label": "遮罩样式",
      "options": [
        { "value": "solid", "label": "纯色" },
        { "value": "gradient", "label": "渐变" }
      ],
      "default": "solid",
      "visible_if": "{{ block.settings.toggle_overlay }}"
    },
    {
      "type": "select",
      "id": "gradient_direction",
      "label": "渐变方向",
      "options": [
        { "value": "to top", "label": "向上" },
        { "value": "to bottom", "label": "向下" }
      ],
      "default": "to top",
      "visible_if": "{{ block.settings.toggle_overlay and block.settings.overlay_style == 'gradient' }}"
    },
    {
      "type": "header",
      "content": "左侧居中图标"
    },
    {
      "type": "image_picker",
      "id": "center_icon",
      "label": "图标"
    },
    {
      "type": "range",
      "id": "icon_width",
      "label": "图标宽度（桌面端）",
      "min": 40,
      "max": 300,
      "step": 10,
      "unit": "px",
      "default": 120
    },
    {
      "type": "range",
      "id": "icon_width_mobile",
      "label": "图标宽度（移动端）",
      "min": 30,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "header",
      "content": "左侧居中文本"
    },
    {
      "type": "text",
      "id": "center_text",
      "label": "文本内容"
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "文字大小",
      "options": [
        { "value": "0.75rem", "label": "12px" },
        { "value": "0.875rem", "label": "14px" },
        { "value": "1rem", "label": "16px" },
        { "value": "1.125rem", "label": "18px" },
        { "value": "1.25rem", "label": "20px" },
        { "value": "1.5rem", "label": "24px" },
        { "value": "2rem", "label": "32px" }
      ],
      "default": "1rem"
    },
    {
      "type": "select",
      "id": "text_weight",
      "label": "字重",
      "options": [
        { "value": "300", "label": "Light (300)" },
        { "value": "400", "label": "Regular (400)" },
        { "value": "500", "label": "Medium (500)" },
        { "value": "600", "label": "Semi Bold (600)" },
        { "value": "700", "label": "Bold (700)" }
      ],
      "default": "400"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "文字颜色",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "text_letter_spacing",
      "label": "字间距",
      "options": [
        { "value": "normal", "label": "正常" },
        { "value": "0.05em", "label": "稍宽" },
        { "value": "0.1em", "label": "宽" },
        { "value": "0.2em", "label": "很宽" }
      ],
      "default": "normal"
    },
    {
      "type": "range",
      "id": "text_margin_top",
      "label": "文本与图标间距",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "header",
      "content": "See More 链接（左下角）"
    },
    {
      "type": "text",
      "id": "see_more_text",
      "label": "文字"
    },
    {
      "type": "url",
      "id": "see_more_link",
      "label": "链接"
    },
    {
      "type": "header",
      "content": "右侧设置"
    },
    {
      "type": "color",
      "id": "right_bg_color",
      "label": "右侧背景色"
    },
    {
      "type": "select",
      "id": "horizontal_alignment",
      "label": "水平对齐",
      "options": [
        { "value": "flex-start", "label": "左" },
        { "value": "center", "label": "居中" },
        { "value": "flex-end", "label": "右" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "垂直对齐",
      "options": [
        { "value": "flex-start", "label": "顶部" },
        { "value": "center", "label": "居中" },
        { "value": "flex-end", "label": "底部" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_gap",
      "label": "内容间距",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "right_padding_top",
      "label": "上内边距",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "right_padding_bottom",
      "label": "下内边距",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "right_padding_left",
      "label": "左内边距",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "right_padding_right",
      "label": "右内边距",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "PSS 幻灯片"
    }
  ]
}
{% endschema %}
